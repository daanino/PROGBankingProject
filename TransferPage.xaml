<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROGBankingProject.TransferPage"
             Title="TransferPage">
    <VerticalStackLayout>
        <Label 
            Text="Please input the username of the account receiving the transfer and the transfer amount."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="TransferToEntry"
            Placeholder="Enter Username (person receiving transfer)"
            FontSize="Medium"/>
        <Entry x:Name="TransferEntry"
            Placeholder="Transfer Amount ($)"
            FontSize="Medium"/>
        <Button x:Name="TransferBtn"
                Text="Confirm Transfer"
                Clicked="OnTransferConfirmed"/>
        <Button x:Name="BacktoAccountPage"
                Text="Return to Account Menu"
                Clicked="ReturnBtnClicked"/>
    </VerticalStackLayout>
</ContentPage>